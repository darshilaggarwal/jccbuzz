.cropper-container {
    max-height: calc(100vh - 200px);
    min-height: 300px;
}

.cropper-view-box,
.cropper-face {
    border-radius: 0;
}

.cropper-view-box {
    box-shadow: 0 0 0 2px #39f;
    outline: 0;
}

