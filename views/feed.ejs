function dragStart(e) {
    initialX = e.clientX - xOffset;
    initialY = e.clientY - yOffset;

    if (e.target.classList.contains('emoji-overlay') || e.target.classList.contains('text-overlay')) {
        isDragging = true;
        e.target.style.zIndex = '100'; // Bring dragged element to front
    }
}

function drag(e) {
    if (isDragging) {
        e.preventDefault();
        currentX = e.clientX - initialX;
        currentY = e.clientY - initialY;

        xOffset = currentX;
        yOffset = currentY;

        setTranslate(currentX, currentY, e.target);
    }
}

function setTranslate(xPos, yPos, el) {
    const container = document.getElementById('storyPreviewContainer');
    const rect = container.getBoundingClientRect();
    const x = (xPos / rect.width) * 100;
    const y = (yPos / rect.height) * 100;
    
    el.style.left = `${x}%`;
    el.style.top = `${y}%`;
    
    // Update position in storyEmojis or storyTextPosition
    if (el.classList.contains('emoji-overlay')) {
        const index = Array.from(container.querySelectorAll('.emoji-overlay')).indexOf(el);
        if (index !== -1) {
            storyEmojis[index].position = { x, y };
        }
    } else if (el.classList.contains('text-overlay')) {
        storyTextPosition = { x, y };
    }
}

function dragEnd(e) {
    initialX = currentX;
    initialY = currentY;
    isDragging = false;
    e.target.style.zIndex = '10'; // Reset z-index
}

