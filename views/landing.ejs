                        submitButton.classList.remove('bg-indigo-600', 'hover:bg-indigo-700');
                        submitButton.classList.add('bg-red-600', 'hover:bg-red-700');
                    }
                    
                    // Reset button after 3 seconds
                    setTimeout(() => {
                        submitButton.innerHTML = '<span>Send Message</span><i class="fas fa-paper-plane ml-2"></i>';
                        submitButton.disabled = false;
                        submitButton.classList.remove('bg-green-600', 'bg-red-600', 'hover:bg-green-700', 'hover:bg-red-700');
                        submitButton.classList.add('bg-indigo-600', 'hover:bg-indigo-700');
                    }, 3000);
                })
                .catch(error => {
                    console.error('Error sending message:', error);
                    // Show error message
                    submitButton.innerHTML = '<span>Failed to Send</span><i class="fas fa-exclamation-circle ml-2"></i>';
                    submitButton.classList.remove('bg-indigo-600', 'hover:bg-indigo-700');
                    submitButton.classList.add('bg-red-600', 'hover:bg-red-700');
                    
