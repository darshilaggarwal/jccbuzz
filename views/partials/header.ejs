<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pinspire</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <div class="flex-shrink-0">
                    <a href="/" class="text-xl font-semibold text-gray-800">
                        Pinspire
                    </a>
                </div>
                
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button type="button" onclick="toggleMobileMenu()" 
                            class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>

                <!-- Desktop menu -->
                <div class="hidden md:flex md:items-center md:space-x-4">
                    <% if (locals.user) { %>
                        <a href="/feed" class="text-gray-600 hover:text-gray-800">Feed</a>
                        <a href="/profile" class="text-gray-600 hover:text-gray-800">Profile</a>
                        <a href="/chats" class="text-gray-600 hover:text-gray-800">Messages</a>
                        <a href="/logout" class="text-red-500 hover:text-red-700">Logout</a>
                    <% } else { %>
                        <a href="/login" class="text-gray-600 hover:text-gray-800">Login</a>
                        <a href="/register" class="text-gray-600 hover:text-gray-800">Register</a>
                    <% } %>
                </div>
            </div>

            <!-- Mobile menu -->
            <div id="mobileMenu" class="hidden md:hidden">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <% if (locals.user) { %>
                        <a href="/feed" class="block px-3 py-2 rounded-md text-gray-600 hover:text-gray-800 hover:bg-gray-100">Feed</a>
                        <a href="/profile" class="block px-3 py-2 rounded-md text-gray-600 hover:text-gray-800 hover:bg-gray-100">Profile</a>
                        <a href="/logout" class="block px-3 py-2 rounded-md text-red-500 hover:text-red-700 hover:bg-gray-100">Logout</a>
                    <% } else { %>
                        <a href="/login" class="block px-3 py-2 rounded-md text-gray-600 hover:text-gray-800 hover:bg-gray-100">Login</a>
                        <a href="/register" class="block px-3 py-2 rounded-md text-gray-600 hover:text-gray-800 hover:bg-gray-100">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }
    </script>
</body>
</html> 