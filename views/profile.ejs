<script>
// Modal functions
function openCreatePostModal() {
    const modal = document.getElementById('createPostModal');
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeCreatePostModal() {
    const modal = document.getElementById('createPostModal');
    modal.classList.add('hidden');
    document.body.style.overflow = '';
    
    // Reset form
    const form = document.getElementById('createPostForm');
    if (form) form.reset();
    
    // Clear image previews
    const previewContainer = document.getElementById('imagePreviewContainer');
    if (previewContainer) {
        previewContainer.querySelector('div').innerHTML = '';
        previewContainer.classList.add('hidden');
    }
    
    // Show upload placeholder
    document.getElementById('imageUploadPlaceholder').classList.remove('hidden');
    
    // Hide "add more" button
    document.getElementById('addMoreImagesBtn').classList.add('hidden');
    
    // Reset character counters
    document.getElementById('captionCharCount').textContent = '0/2200';
    
    // Reset hidden title field
    const hiddenTitleField = document.getElementById('hiddenTitleField');
    if (hiddenTitleField) hiddenTitleField.value = '';
}
</script>

<style>
/* Profile picture and story ring styles */
.profile-container {
    position: relative;
    width: 8rem;
    height: 8rem;
}

.story-ring {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    padding: 2px;
    border-radius: 9999px;
}

.profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 9999px;
}

.add-story-button {
    position: absolute;
    bottom: 0;
    right: 0;
    background-color: #3B82F6;
    color: white;
    padding: 0.5rem;
    border-radius: 9999px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.2s;
}

.add-story-button:hover {
    background-color: #2563EB;
    transform: scale(1.1);
}

/* Toast notification */
#toast {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #333;
    color: white;
    padding: 12px 24px;
    border-radius: 4px;
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s ease;
}

#toast.show {
    opacity: 1;
}

/* Line clamp */
.line-clamp-6 {
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

/* Post menu backdrop */
.post-menu-backdrop {
    background: rgba(0, 0, 0, 0.5);
    position: fixed;
    inset: 0;
    z-index: 40;
}

@media (max-width: 640px) {
    .line-clamp-6 {
        -webkit-line-clamp: 4;
    }
}
</style>

