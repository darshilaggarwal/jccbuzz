            console.error('Message ID lost during edit');
            showToast('Error: Message ID lost', 'error');
            inputField.replaceWith(messageContentEl);
            return;
        }
        
        if (e.key === 'Enter' || e.type === 'blur') {
            const newContent = inputField.value.trim();
            
            // If content is empty or unchanged, revert
            if (!newContent || newContent === currentContent) {
                inputField.replaceWith(messageContentEl);
                return;
            }
            
            try {
                const response = await fetch(`/message/${messageId}/edit`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ content: newContent })
                });
                
                if (response.ok) {
