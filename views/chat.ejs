    if (!messageContentEl) {
        console.error('Message content element not found');
        showToast('Cannot edit message: Content not found', 'error');
        return;
    }
    
    const currentContent = messageContentEl.textContent;
    
    // Create an input field to replace the message content
    const inputField = document.createElement('input');
    inputField.type = 'text';
    inputField.value = currentContent;
