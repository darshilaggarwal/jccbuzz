    // Replace the message content with the input field
    messageContentEl.replaceWith(inputField);
    inputField.focus();
    
    // Store the message ID in the input field for reference
    inputField.dataset.messageId = currentMessageId;
    
    // Handle input field events
    const handleEdit = async (e) => {
        const messageId = inputField.dataset.messageId;
