    <!-- Gradient accent line at top -->
    <div class="absolute top-0 left-0 w-full h-0.5 bg-gradient-to-r from-blue-500 to-purple-600"></div>
    
    <div class="flex items-center justify-between max-w-4xl mx-auto">
