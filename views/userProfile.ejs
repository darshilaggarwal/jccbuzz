                followButton.textContent = 'Following';
                followButton.classList.remove('bg-blue-500', 'hover:bg-blue-600', 'text-white');
                followButton.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-800', 'dark:text-white');
                
